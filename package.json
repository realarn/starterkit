{
  "name": "starterkit",
  "version": "1.0.0",
  "description": "StarterKit",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "mkdirs": "mkdir -p dist/css && mkdir -p dist/js",
    "new": "run-p clean mkdirs",
    "copy:html": "cp -r index.html dist",
    "copy:img": "cp -r src/img dist",
    "copy": "run-p copy:*",
    "scss:dev": "sass src/scss/main.scss --style=compressed --stop-on-error --embed-source-map > dist/css/styles.css",
    "scss:prod": "sass src/scss/main.scss --style=compressed --stop-on-error --embed-source-map | postcss -u autoprefixer --autoprefixer.browsers '> 5%, ie 9' > dist/css/styles.css",
    "js:dev": "uglifyjs src/js/*.js -m -o dist/js/index.js",
    "js:prod": "uglifyjs src/js/*.js -m -c -o dist/js/index.js",
    "build:dev": "run-s new copy scss:dev js:dev",
    "build:prod": "run-s new copy scss:prod js:prod",
    "serve": "browser-sync dist -w",
    "watch:html": "onchange 'index.html' -- npm run copy:html",
    "watch:scss": "onchange 'src/scss/**/*.scss' -- npm run scss:dev",
    "watch:js": "onchange 'src/**/*.js' -- npm run js:dev",
    "watch:img": "onchange 'src/img/' -- npm run copy:img",
    "watch": "run-p watch:*",
    "start": "run-p serve watch",
    "zip": "npm run build:prod && cd dist && zip -r -X ../app.zip ."
  },
  "author": "Arn Aleksson <real_arn@yahoo.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "browser-sync": "^2.27.9",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.9",
    "svg-sprite-generator": "^0.0.7",
    "uglify-js": "^3.15.3"
  }
}
